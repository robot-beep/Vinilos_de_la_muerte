<%- include('../partials/_header'); -%>

<section class="py-5" *ngFor="let producto of Card">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="/images/<%= productos.image %>" alt="..." /></div>
            <div class="col-md-6">
                <h1 class="display-5 fw-bolder"><%= productos.titulo %></h1>
                <div class="fs-5 mb-5">
                    <span>$ <%= productos.valor %></span>
                </div>
                <p class="lead">Artista: <%= productos.autor %> </p>
                <p class="lead">formato: <%= productos.formato %></p>
                <p class="lead">estado: <%= productos.estado %></p>
                <div class="d-flex">
                    <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
                    <button class="btn btn-outline-dark flex-shrink-0" type="button">
                        <i class="bi-cart-fill me-1"> <a href="/agregar-producto-carrito/<%= productos._id %>">agregar al carrito</a></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>